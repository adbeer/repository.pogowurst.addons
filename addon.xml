<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.pogowurst.addons" name="Pogowurst Add-on Repository" version="1.0.0" provider-name="pogowurst">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="Pogowurst Add-on Repository">
        <info compressed="false">https://raw.github.com/pogowurst/repository.pogowurst.addons/master/addons.xml</info>
        <checksum>https://raw.github.com/pogowurst/repository.pogowurst.addons/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.github.com/pogowurst/repository.pogowurst.addons/master/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">
            Install Addons from github.com/pogowurst development repository
        </summary>
        <summary lang="de">
            Installiere Addons vom github.com/pogowurst Entwicklungs-Repository
        </summary>
        <description lang="en">
            Here you can find the latest add-on developement versions.[CR]These versions might be
            [B]unstable[/B]![CR]Use them with caution.
        </description>
        <description lang="de">
            Enthält die neuesten Addon Entwicklungsversionen.[CR]Diese Versionen können instabil sein!
        </description>
        <platform>all</platform>
    </extension>
</addon>